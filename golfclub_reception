/******************************************************************************
Lesson 28 Apr, Task 8
*******************************************************************************/


#include <stdio.h>

int main()
{
    int balls = 20;
    int team1 = 2;
    int team2 = 5;
    int team3 = 3;
    int team4 = 4;
    int team5 = 6;
    int team6 = 2; 
    
    balls = balls - team1 - team2 - team3 + team1 - team4 - team5 + team2 - team6;
    int players = team1 + team2 + team3 + team4 + team5 + team6;
    float income = players * 3.5;
    int teams = 1 + 1 + 1 - 1 + 1 + 1 - 1 + 1;
    
    printf("End of the day.\nBalls left: %d\nIncome: %.2f\nTeams on the golf course: %d\n", balls, income, teams);

    return 0;
}

